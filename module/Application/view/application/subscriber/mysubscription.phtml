    <td>
        <script language="javascript">
         function delcfm() {
            if (!confirm("确认退订该服务？")) {
                 window.event.returnValue = false;
             }
         }
        </script>
        <a href="<?php echo $this->url('subscriber',
            array('action'=>'deletesubscription','id' => $subscription->id));?>" onClick="delcfm()">删除</a>
    </td>
</tr>
<?php endforeach; ?>
</table>
<?php }?>

