    	           case 6: echo "不等于";break;}?><?php echo $subscription->threshold_value;?></td>
    <td><?php switch($subscription->send_frequency){
                     case 1: echo "一分钟一次";break;
                     case 2: echo "一小时一次";break;
                     case 3: echo "六小时一次";break;
                     case 4: echo "一天一次";break;
    }?></td>
